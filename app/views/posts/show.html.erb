<h1>Why do you want to see them?</h1>
<p>Find me in app/views/posts/show.html.erb</p>


<div class="row">
	<% @posts.each do |p| %>
		
		<div class="col-sm-12 col-md-4 postBox">
			<div class="thumbnail">
				<%= image_tag p.picture.url(:medium)%>
				<div class="caption">
					<h3> <%= p.description %> </h3>
					<p> Created by: <%= p.user_id %> </p>
				</div>
					<!-- delete and edit buttons here -->
			</div>
		</div>
		
	<% end %>	
</div>



